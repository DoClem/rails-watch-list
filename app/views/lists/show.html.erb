<h1>Mes petits films</h1>
<% @list.bookmarks.each do |bookmark|%>
<ul>
<li>
<%= link_to bookmark.movie.title, bookmark_path(bookmark) %>
<%= link_to bookmark.movie.overview, bookmark_path(bookmark) %>
<%= link_to bookmark.movie.poster_url, bookmark_path(bookmark) %>
<%= link_to bookmark.movie.raring, bookmark_path(bookmark) %>
<%= link_to "Delete", bookmark_path(bookmark), data: {turbo_method: "delete", turbo_confirm: "Are you sure ?" } %>
</li>
</ul>
<% end %>

<%= link_to "Create a bookmark", new_list_bookmark_path(@list) %>

<a href="/lists"> Back home</a>
