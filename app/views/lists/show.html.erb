<h1>Mes petits films</h1>
<% @list.bookmarks.each do |bookmark|%>
<ul>
<li>
<%= bookmark.movie.title%>
<%= bookmark.movie.overview %>
<%= bookmark.movie.poster_url %>
<%= bookmark.movie.rating%>
<%= link_to "Delete", bookmark_path(bookmark), data: {turbo_method: "delete", turbo_confirm: "Are you sure ?" } %>
</li>
</ul>
<% end %>

<%= link_to "Create a bookmark", new_list_bookmark_path(@list) %>

<a href="/lists"> Back home</a>
